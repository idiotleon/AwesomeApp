<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seawalker.awesomeapp.activities.MainActivityJ">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bnv_main_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/bnv_color_selector"
        app:itemTextColor="@drawable/bnv_color_selector"
        app:menu="@menu/menu_bnv" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
